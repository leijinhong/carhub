---
import { Image } from "astro:assets";
import logoSvg from "/public/images/logo.svg";
import CustomButton from "../shared/CustomButton";
---

<!-- 导航栏 -->
<header class="w-full absolute z-10 top-0 left-0">
    <nav
        class="max-w-[1440px] mx-auto flex justify-between items-center sm:px-16 px-6 py-4">
        <a href="/" class="flex justify-center items-center">
            <Image
                src={logoSvg}
                alt="logo"
                class="object-contain"
                width={118}
                height={18}
            />
        </a>

        <div class="flex items-center gap-x-1">
            <button
                data-switch-theme
                class="outline-none flex relative text-heading-2 rounded-full p-2 lg:p-3 border border-box-border">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-6 h-6 dark:flex hidden">
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"
                    ></path>
                </svg>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-6 h-6 dark:hidden">
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
                    ></path>
                </svg>
                <span class="sr-only">switch theme</span>
            </button>
            <CustomButton
                containerStyles="text-primary-blue rounded-full bg-white min-w-[130px]">
                Sign in
            </CustomButton>
        </div>
    </nav>
</header>
